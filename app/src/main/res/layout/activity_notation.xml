<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/resetbutton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="Reset values"
            android:layout_gravity="center"
            >
        </Button>

        <TextView
                android:id="@+id/team"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:ems="10"
                android:text="team" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/team1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:hint="team 1rst member"
                android:inputType="textPersonName"
                android:layout_marginLeft="50dp"/>
            <EditText
                android:id="@+id/team2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:hint="team snd member"
                android:inputType="textPersonName"
                android:layout_marginLeft="50dp"/>
            <EditText
                android:id="@+id/team3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:hint="team third member"
                android:inputType="textPersonName"
                android:layout_marginLeft="50dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="8dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/src"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:text="src" />

                <Spinner
                    android:id="@+id/kotlinNote"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:digits="012345"
                    android:ems="10"
                    android:hint="kotlin gradle src quality"
                    android:inputType="numberDecimal" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/json"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:text="json" />

                <Spinner
                    android:id="@+id/jsonNote"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:digits="012345"
                    android:ems="10"
                    android:hint="json marshalling unmarshaling, protocol"
                    android:inputType="numberDecimal" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/livedata"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:text="liveData" />

                <Spinner
                    android:id="@+id/livedataNote"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:digits="012345"
                    android:ems="10"
                    android:hint="viewModel, livedata, mutablelivedata, setValue, postValue"
                    android:inputType="numberDecimal" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/git"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:text="git" />

                <Spinner
                    android:id="@+id/gitNote"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:digits="012345"
                    android:ems="10"
                    android:hint="git , github, branch and usage among team"
                    android:inputType="numberDecimal" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/serversocket"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:text="serversocket" />

                <Spinner
                    android:id="@+id/serversocketNote"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:digits="012345"
                    android:ems="10"
                    android:hint="serversocket, multiple or single room, type of message "
                    android:inputType="numberDecimal" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/multicast"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:text="multicast" />

                <Spinner
                    android:id="@+id/multicastNote"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:digits="012345"
                    android:ems="10"
                    android:hint="multicast discovery, incoming vote , closing vote, partipants"
                    android:inputType="numberDecimal" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/demo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:text="demo" />

                <Spinner
                    android:id="@+id/demoNote"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:digits="012345"
                    android:ems="10"
                    android:hint="demo, ui threads, layout and adapters, cards, config"
                    android:inputType="numberDecimal" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/doc"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:text="doc" />

                <Spinner
                    android:id="@+id/docNote"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:digits="012345"
                    android:ems="10"
                    android:hint="slides, software architecture, protocol"
                    android:inputType="numberDecimal" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/test"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:text="test" />

                <Spinner
                    android:id="@+id/testNote"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:digits="012345"
                    android:ems="10"
                    android:text="tests, message, room, json"
                    android:inputType="numberDecimal"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:text="Send Email with notes of the team"
                android:layout_gravity="center"
                >
            </Button>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</layout>